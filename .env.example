PORT=3000
NODE_ENV=development
API_PREFIX=api
# Database configuration
# Available options: sqlite, postgres, mysql
DB_TYPE=sqlite

# Database connection paths
# For SQLite: ./path/to/database.sqlite or :memory: for in-memory database
# For PostgreSQL: postgres://username:password@host:port/database
# For MySQL: mysql://username:password@host:port/database
DB_PATH=./data/sqlite/database.sqlite
